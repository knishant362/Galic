<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FiveFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:padding="20dp"
            android:background="#121212">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_clipart1"
                android:layout_centerVertical="true"

                />

            <TextView
                android:id="@+id/txtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/imgProfile"
                android:fontFamily="sans-serif-black"
                android:includeFontPadding="false"
                android:text="Nishant Kumar"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nishant Kumar"
                android:layout_toRightOf="@id/imgProfile"
                android:layout_below="@id/txtFullName"
                android:textSize="14sp"
                android:layout_marginLeft="18dp"
                android:includeFontPadding="false"


                />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LLCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="-85dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTwo"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FFFFFF"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/imgRequests"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/requests"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/txtRequests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/requests"
                        android:fontFamily="sans-serif-black"
                        android:layout_below="@id/imgRequests"
                        android:gravity="center"
                        android:padding="5dp"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        />


                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTwo"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgOfferings"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        android:src="@drawable/money1" />

                    <TextView
                        android:id="@+id/txtOfferings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/offerings"
                        android:fontFamily="sans-serif-black"
                        android:layout_below="@id/imgOfferings"
                        android:gravity="center"
                        android:padding="5dp"
                        android:includeFontPadding="false"
                        android:textColor="#000000"

                        />


                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardThree"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgRecommend"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        android:src="@drawable/recmnd" />

                    <TextView
                        android:id="@+id/txtRecommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recommends"
                        android:fontFamily="sans-serif-black"
                        android:layout_below="@id/imgRecommend"
                        android:gravity="center"
                        android:padding="5dp"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        />


                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

